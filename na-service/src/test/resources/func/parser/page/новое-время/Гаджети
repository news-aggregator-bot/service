    function readCookie(n){for(var r=n+"=",t=document.cookie.split(";"),e=0;e<t.length;e++){for(var i=t[e];" "==i.charAt(0);)i=i.substring(1,i.length);if(0==i.indexOf(r))return i.substring(r.length,i.length)}return null}
    function addParam(url, param, value = null) {
        if (url.indexOf('?') !== -1) {
            var url = url + "&" + param + "=" + value;
        } else {
            var url = url + "?" + param + "=" + value;
        }

        return url;
    }
    function loadBlock(url, id) {

        var xhr = new XMLHttpRequest();
        var element = document.getElementById(id);

        url = addParam(url, "browser_id", readCookie("browser_id"));

        xhr.open("GET", url, true);
        xhr.onload = function (e) {
            if (xhr.readyState === 4) {
                if (xhr.status === 200) {
                    element.innerHTML = xhr.responseText;
                } else {
                    console.error(xhr.statusText);
                }
            }
        };
        xhr.onerror = function (e) {
            console.error(xhr.statusText);
        };
        xhr.send(null);
    }
    function loadBlockTest( ) {
                
        var xhr = new XMLHttpRequest();
        let getAdditionalBlockRoute = "https://nv.ua/ukr/get_additional_blocks/2348.html";
        if ((window.location.hostname).indexOf('podcasts') != -1) {

            getAdditionalBlockRoute = getAdditionalBlockRoute.replace(
                (new URL(getAdditionalBlockRoute)).hostname,
                window.location.hostname
            );
        }

        xhr.open("GET", getAdditionalBlockRoute, true);
        xhr.onload = function (e) {
            if (xhr.readyState === 4) {
                if (xhr.status === 200) {

                    var parser = new DOMParser();
                    var doc = parser.parseFromString(xhr.responseText, "text/html");

                    try{
                        var async_header_block = document.getElementById('async_header_block');
                        if (async_header_block && doc.getElementById('async_header_block').innerHTML){
                            async_header_block.innerHTML = doc.getElementById('async_header_block').innerHTML;
                        }
                    }catch{
                        console.log('cant load header');
                    }

                    try{
                        var async__head_opinions = document.getElementById('async__head_opinions');
                        if (async__head_opinions && doc.getElementById('async__head_opinions').innerHTML){
                            async__head_opinions.innerHTML = doc.getElementById('async__head_opinions').innerHTML;
                        }
                    }catch{
                        console.log('cant load async_head_opinions');
                    }

                    try{
                        var async__spec_covid = document.getElementById('async__spec_covid');
                        if (async__spec_covid && doc.getElementById('async__spec_covid').innerHTML){
                            async__spec_covid.innerHTML = doc.getElementById('async__spec_covid').innerHTML;
                        }
                    }catch{
                        console.log('cant load async__spec_covid');
                    }
                    try{
                        var async__spec_projects = document.getElementById('async__spec_projects');
                        if (async__spec_projects && doc.getElementById('async__spec_projects').innerHTML){
                            async__spec_projects.innerHTML = doc.getElementById('async__spec_projects').innerHTML;
                        }
                    }catch{
                        console.log('cant load async__spec_projects');
                    }
                    //async_spec_202171_projects
                    var spec_date = new Date();
                    var spec_projects_name = 'async_spec_'+spec_date.getFullYear()+(spec_date.getMonth()+1)+spec_date.getDate()+'_projects';
                    try{
                        var async__specprojects = document.getElementById(spec_projects_name);
                        if (async__specprojects && doc.getElementById(spec_projects_name).innerHTML){
                            async__specprojects.innerHTML = doc.getElementById(spec_projects_name).innerHTML;
                        }
                    }catch{
                        console.log('cant load '.spec_projects_name);
                    }

                    try{
                        var menu__popUp = document.getElementById('menu__popUp');
                        if(menu__popUp && doc.getElementById('menu__popUp').innerHTML){
                            menu__popUp.innerHTML = doc.getElementById('menu__popUp').innerHTML;
                        }

                    }catch{
                        console.log('cant load menu');
                    }


                    try{
                        var footer = document.getElementById('load_footer');
                        if(footer && doc.getElementById('load_footer').innerHTML){
                            footer.innerHTML = doc.getElementById('load_footer').innerHTML;
                            footer.style.display = 'block';
                        }
                    }catch{
                        console.error('cant load footer');
                    }


                    if(typeof initPodcastsLink === 'function'){
                        initPodcastsLink();
                    }

                } else {
                    console.error(xhr.statusText);
                }
            }
        };
        xhr.onerror = function (e) {
            console.error(xhr.statusText);
        };
        xhr.send(null);
    }
