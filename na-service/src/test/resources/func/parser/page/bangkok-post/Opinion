		var insertAds = function(event_slot){
			if($('.teads-inread').height() > 0){
				time = 10;
			}
			time++;
			if(time && time != null && time < 10){
				setTimeout(function(){
					insertAds(event_slot);
				}, 400);
			}
			if(time == 10){
				googletag.pubads().refresh([event_slot], {changeCorrelator: false});
			}
