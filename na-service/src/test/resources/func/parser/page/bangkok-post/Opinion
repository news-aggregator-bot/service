				var g_obj_bp = {
			escape_html: function(text) {
				var map = {
					'&': '&amp;',
					'<': '&lt;',
					'>': '&gt;',
					'"': '&quot;',
					"'": '&#039;'
				};
				return text.replace(/[&<>"']/g, function(m) { return map[m]; });
			}
		}
		var g_member = {
			_callback_login: [],

			/**
			 * 0 ยังไม่ได้ call
			 * 1 กำลัง call
			 * 2 call เรียบร้อยแล้ว
			 */
			_is_get_login_calling: 0,

			is_member_login: false,
			id: '',
			usrename: '',
			name: '',
			lastname: '',
			email: '',
			avatar: '',
			get_url_login: function() {
				return 'https://member.bangkokpost.com/login.php';
			},
			get_url_logout: function() {
				return 'https://www.bangkokpost.com/global_member/cw.php?xType=logout';
			},
			get_login_template: function() {

				var _t = this;

				_t.get_member_login(function() {
					if (_t.is_member_login) {
						// <a href="/member/profile"></a>
						// <a href="/member/profile">My profile</a> |
						$('#signin-container').html('<span class="box-signout"><i class="icon-sign-in"></i><span><a href="/member/profile">' + _t.usrename + '</a></span><a href="' + _t.get_url_logout() + '" id="signout">SIGN OUT</a></span>');
						$('#signin-container2').html(
							'<div class="box-btnsingout">\
								<i class="icon-sign-in"></i> <a href="/member/profile">' + _t.usrename + '</a>\
								<div class="box-signout-link">\
									<a href="' + _t.get_url_logout() + '">Sign out</a>\
								</div>\
							</div>'
						);
					} else {
						$('#signin-container').html('<span class="box-signin"><i class="icon-sign-in"></i><a href="' + _t.get_url_login() + '" id="signin">SIGN IN</a></span>');
						$('#signin-container2').html('<div class="box-btnsingin"><a href="https://member.bangkokpost.com/login.php" class="btn-signin" title="SIGN IN" ><i class="icon-sign-in"></i> SIGN IN</a></div>');
					}
				});

			},
			get_member_login: function(_callback) {

				var _t = this;

				if (typeof _callback == 'function') {
					_t._callback_login.push(_callback);
				}

				// call แล้ว
				if (_t._is_get_login_calling == 2) {
					// Callback all
					$.each(_t._callback_login, function(k, v) {
						v();
					});
					_t._callback_login = [];
					return true;
				}

				if (_t._is_get_login_calling <= 0) {
					_t._is_get_login_calling = 1;
					$.get("/member/get_member_login", function(data) {

						if (typeof data.userID != 'undefined') {
							_t.id = data.userID;
							_t.usrename = data.user_display_name;
							_t.name = data.user_name;
							_t.lastname = data.user_surname;
							_t.email = data.user_email;
							_t.avatar = data.user_avatar;

							_t.is_member_login = true;
						}

						_t._is_get_login_calling = 2;

						// Callback all
						$.each(_t._callback_login, function(k, v) {
							v();
						});
						_t._callback_login = [];

					}, "json");
				}
			}
		}

		g_member.get_member_login();


		

				if(g_page_type == 'article'){
			var g_like_article = {
			fn_like_unlike : function (src_id , status){


				if (src_id == '' && status == '') {
					//console.log('content :' +src_id +' >> return false ');
					return false;
				}

				if (typeof status === 'undefined') {
					// only show like/unlike (not set)
					//console.log('content >> undefined ');
					status = 99;
				}
				$.post("/ajax/_getLikeUnlike.php", { src_id : src_id , status : status , act : 'CONV3'},
					function(data) {
						//console.log('data =>' + data);
						if (data != '') {

							$('div#like-dislike-article.f-comment').html(data);
						}
						return false;
				});

			},
			fn_show_block : function (content_id){

				this.fn_like_unlike(content_id);
				// this.fn_like_unlike(content_id,1);
				// this.fn_like_unlike(content_id,0);
			}

		}

		}
