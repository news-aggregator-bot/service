	var g_campaign_promote_event = {
    /* Config */
    date_begin: '2020/01/20 17:00:00 GMT+0700',
    date_end: '2020/02/05 22:30:00 GMT+0700',
    cookie_name: 'is_show_promote',
    domain: 'bangkokpost.com',
    age: 86400, // 1 day  
    get_cookie_promote_event: function() {
        var v = document.cookie.match('(^|;) ?' + this.cookie_name + '=([^;]*)(;|$)');
        return v ? v[2] : null;
    },
    close_promote_event: function() {
        var d = new Date;
        d.setTime(d.getTime() + (this.age * 1000));
        document.cookie = this.cookie_name + "=1;domain=" + this.domain + ";path=/;expires=" + d.toGMTString();
		$('#bar-promote-live').fadeOut();
       //$("#bar-promote-live").remove();
    },
    show_promote_event: function() {


$('body').append('<div class="bar-promote-live" id="bar-promote-live"><div class="container"><div class="bar-promote-bg"><div class="bar-close"><a href="javascript:;" onclick="g_campaign_promote_event.close_promote_event();" id="bar-close"><img src="https://static.bangkokpost.com/newdesign/assets/images/close.svg" alt=""></a></div><div class="bar-promote--box promo1"><img src="https://static.bangkokpost.com/newdesign/assets/images/forum/2020/economic_forum/logo_forum.svg" class="img-fluid" alt=""></div><div class="bar-promote--box promo3"><span class="animate-live"></span><img src="https://static.bangkokpost.com/newdesign/assets/images/forum/2020/economic_forum/icn-live.svg" alt=""></div><div class="bar-promote--box promo31"><div class="box1">Special <span>LIVE</span></div><div class="box2">Streaming</div></div><div class="bar-promote--box promo4">	<strong>Celebrating the 17<sup>th</sup> anniversary of Post Today</strong><span>Thursday 6 February, 2020 13:10 hrs. onward</span></div><div class="bar-promote--box promo5"><a href="https://www.posttoday.com/events/economicforum2020/live"><img src="https://static.bangkokpost.com/newdesign/assets/images/forum/2020/economic_forum/icn-play.svg" class="img-fluid" alt=""></a></div><div class="bar-promote--box promo6"><img src="https://static.bangkokpost.com/newdesign/assets/images/forum/2020/economic_forum/text_forum.svg" class="img-fluid" alt=""></div></div></div></div>');

    },
    check_show_promote_event: function() {
        var multi_timezone_offset = 60000;
        var t = new Date();
        var utc_now = t.getTime() + (t.getTimezoneOffset() * multi_timezone_offset);
        var check_date_begin = new Date(this.date_begin);
        var utc_begin = check_date_begin.getTime() + (check_date_begin.getTimezoneOffset() * multi_timezone_offset);
        var check_date_end = new Date(this.date_end);
        var utc_end = check_date_end.getTime() + (check_date_end.getTimezoneOffset() * multi_timezone_offset);
        if (utc_now > utc_begin && utc_now < utc_end) {
            var is_noti = this.get_cookie_promote_event();
            if (!is_noti) {                     
                return true;
            }
        } else {
            return false;
        }
    },
    set_promote_event: function() {
        if (this.check_show_promote_event()) {
            this.show_promote_event();
        }
    }
}

$(function() {
     g_campaign_promote_event.set_promote_event();        
});

